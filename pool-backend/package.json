{
  "name": "pool-backend",
  "version": "1.0.0",
  "description": "just a backend",
  "main": "index.js",
  "scripts": {
    "bootstrap": "ansible-playbook -i deploy/dev deploy/bootstrap.yml --extra-vars \"ansible_ssh_user=root\"",
    "create-server": "ansible-playbook -i deploy/dev deploy/server.yml --extra-vars \"ansible_ssh_user=root\"",
    "test": "npm test",
    "start": "pm2 start app/index.js",
    "reload": "pm2 reload index",
    "lint": "eslint --ext .js app",
    "dev": "NODE_ENV=development DEBUG=app:* nodemon --exec 'npm run lint && node' --watch app app/index",
    "dev-db": "NODE_ENV=development DEBUG=app:*,db:* nodemon --exec 'npm run lint && node' --watch app app/index"
  },
